<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="utf-8">
  <title>
    <%= title %>
  </title>
  <script src="./bundle.js"></script>
</head>

<body>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="#"><%= title %></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault"
      aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <button type="button" class="btn btn-outline-info mr-4" id="updateButton"><span class="glyphicon glyphicon-refresh"></span> Refresh</button>
    <div id="fessSearch" class="collapse navbar-collapse">
      <form method="GET" class="form-inline" id="searchForm">
          <input type="text" class="form-control mr-sm-2" name="q" id="searchquery" />
          <button type="submit" class="btn btn-success navbar-btn" id="searchbutton">
            <span class="glyphicon glyphicon-search"></span> Search</button>
      </form>
    </div>
  </nav>

  <main role="main" class="container">
    <!-- アラートメッセージ -->
    <div class="container" id="alertContainer">
      <div id="message" class="alert alert-info alert-dismissible" role="alert" style="display:none;">
        <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
          <span aria-hidden="true">×</span>
        </button>
        <div id="messageText">前回の更新から、3分間は更新できません</div>
      </div>
    </div>

    <div id="listContainer" class="container">
      <div id="listSection" class="table-responsive">
        <p>更新日：
          <span id="update">未取得</span>
        </p>
        <table id="tickets" class="table table-striped table-hover table-autofilter">
          <thead>
            <tr>
              <TH>#</TH>
              <TH>カテゴリ</TH>
              <TH class="table-filterable">ステータス</TH>
              <TH>開始日</TH>
              <TH>期日</TH>
              <TH>優先度</TH>
              <TH>題名</TH>
              <TH>担当者</TH>
              <TH>更新日</TH>
            </tr>
          </thead>
          <tbody id="tableBody" class="list">
          </tbody>
        </table>
      </div>
    </div>
  </main>
  <!-- /.container -->
</body>

</html>